pipeline {
    agent any

    environment {
        IMAGE_NAME = "android_builder"
        CONTAINER_NAME = "android-builder1"
        JENKINS_CONTAINER = "jenkinss"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo "🔄 Checkout source code dari repo GitHub..."
                git branch: 'main', url: 'https://github.com/adityacahyo28/aplikasicc.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo "🐳 Build image Docker untuk Jenkins dan Android Builder..."
                bat 'docker-compose build'
            }
        }

        stage('Start Containers') {
            steps {
                echo "🚀 Menjalankan container Jenkins dan Android Builder..."
                bat '''
                docker-compose down || exit 0
                docker-compose up -d
                docker ps
                '''
            }
        }

        stage('Verify Android Builder Running') {
            steps {
                echo "🔍 Verifikasi container android-builder1 berjalan..."
                bat '''
                ping 127.0.0.1 -n 10 >nul
                docker ps --filter "name=android-builder1"
                docker logs android-builder1 --tail 15
                '''
            }
        }

        stage('Build Android App') {
            steps {
                echo "⚙️ Menjalankan Gradle build di dalam container android-builder1..."
                bat '''
                docker exec android-builder1 bash -c "./gradlew clean assembleDebug"
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Build Android App berhasil menggunakan Docker & Jenkins!"
            bat 'docker ps'
        }
        failure {
            echo "❌ Build gagal, silakan cek log di Jenkins console output."
            bat 'docker logs android-builder1 --tail 30'
        }
    }
}
